@model STQnA.Core.ViewModels.QuestionVM;

@{
    ViewData["Title"] = "Edit Question";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow-sm p-4 border-0">
            <div class="card-header bg-primary text-white text-center mb-3 rounded-3">
                <h5 class="mb-0">Edit Question</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input asp-for="QuestionId" type="hidden" />
                    <input asp-for="StudentId" type="hidden" />
                    <input asp-for="CreatedDate" type="hidden"/>

                    <div class="form-group mb-4">
                        <label for="QuestionText" class="form-label fs-5">What's your question?</label>
                        <textarea asp-for="QuestionText" class="form-control form-control-lg" rows="3" placeholder="Type your question here..."></textarea>
                        <span asp-validation-for="QuestionText" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary btn-md px-4 py-2 shadow-sm" style="background: linear-gradient(45deg, #007bff, #00b4ff); border: none; color: white;">
                            Update Question
                        </button>
                    </div>
                </form>
                <div class="mt-3">
                    <a asp-action="Index" asp-controller="Question" class="btn btn-outline-secondary btn-md">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

